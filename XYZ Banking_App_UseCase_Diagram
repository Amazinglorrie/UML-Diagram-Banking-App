@startuml
title Banking App Use Case Diagram
left to right direction
skinparam backgroundColor #lightGrey
skinparam packageStyle rect

actor Customer
actor BankEmployee

rectangle "XYZ Banking App System" {
  usecase "<b>Check \nBalance" as UC1
  usecase "<b>Transfer\n Money" as UC2
  usecase "<b>Pay \nBills" as UC3
  usecase "<b>Apply \nfor Loans" as UC4
  usecase "<b>Report \nFraud" as UC5

  usecase "<b>Review \nLoan Applications" as UC6
  usecase "<b>Freeze \nSuspicious Accounts" as UC7
  usecase "<b>Generate \nFinancial Reports" as UC8

  ' Modular and conditional use cases
  usecase "<b>Validate \nPayment Authorization" as UC9
  usecase "<b>Confirm \nTransaction Status" as UC10
  usecase "<b>Verify \nCredit History" as UC11
  usecase "<b>Verify \nIdentity" as UC12
}

' Customer interactions
Customer --> UC1
Customer --> UC2
Customer --> UC3
Customer --> UC4
Customer --> UC5

UC3 ..> UC9 : <<include>>
UC3 ..> UC10 : <<include>>
UC4 ..> UC11 : <<include>>
UC4 ..> UC12 : <<include>>

' BankEmployee interactions
BankEmployee --> UC6
BankEmployee --> UC7
BankEmployee --> UC8

@enduml
